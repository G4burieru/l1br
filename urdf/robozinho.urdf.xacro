<?xml version="1.0" ?>
<robot name="robozinho" xmlns:xacro="http://ros.org/wiki/xacro">

  <!-- ****************** ROBOT CONSTANTS *******************************  -->
  <!-- Define the size of the robot's main chassis in meters -->
  <xacro:property name="base_width" value="0.47"/>
  <xacro:property name="base_length" value="0.77"/>
  <xacro:property name="base_height" value="0.15"/>
	
  <!-- Define the shape of the robot's two wheels in meters -->
  <xacro:property name="wheel_radius" value="0.07"/>
  <xacro:property name="wheel_width" value="0.03"/>

  <!-- Define the shape of the robot's tray in meters -->
  <xacro:property name="tray_radius" value="0.2"/>
  <xacro:property name="tray_width" value="0.041"/>
  <!-- ********************** ROBOT BASE *********************************  -->
  <link name="base_link">
    </link>
    
    <joint name="base_joint" type="fixed">
      <parent link="base_link"/>
      <child link="chassis" />
      <origin xyz="0.0 0.0 0.0118" rpy="0 0 3.14"/>
    </joint>

    <link name="chassis">
      <visual>
        <origin xyz="0  0  0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="file:///$(find rocket)/meshes/EST_estrutura_m3.dae" />
        </geometry>
      </visual>

      <collision>
          <origin rpy="0  0  0" xyz="0  0  0.01" />
          <geometry>
              <box size="${base_length} ${base_width} ${base_height}"/>
          </geometry>
      </collision>

      <inertial>
          <origin xyz="0  0  -0.0118" rpy="0  0  0"/>
          <mass value="2.4"/>
          <inertia ixx="0.019995" ixy="0.0" ixz="0.0"
                iyy="0.019995" iyz="0.0"
                izz="0.03675" />
      </inertial>
    
    </link>

  <!-- *********************** DRIVE WHEELS ******************************  -->
  
    <link name="left_wheel">
      <visual name="left_wheel_visual">
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
            <mesh filename="file:///$(find rocket)/meshes/M_rodatrativa.dae" scale="1 1 1"/>
        </geometry>
      </visual>
      
      <collision name="left_wheel_collision">
        <origin xyz="0 0 0" rpy="0 1.57 0"/>
        <geometry>
          <cylinder length="${wheel_width}" radius="${wheel_radius}"/>
        </geometry>
      </collision>
      
      <inertial>
        <mass value="1" />
        <origin rpy="0 1.57 0" xyz="0 0 0" />
        <inertia ixx="0.001" ixy="0.0" ixz="0.0"
                iyy="0.001" iyz="0.0"
                izz="0.001" />
      </inertial>
      
    </link>

    <joint name="joint_left_wheel" type="continuous">
            <parent link="chassis" />
            <child link="left_wheel" />
            <origin rpy="0 0 1.57" xyz=" 0 -0.296755 0" />
            <axis rpy="0 0 0" xyz="1 0 0"/>
    </joint>

    <link name="right_wheel">
      <visual name="right_wheel_visual">
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
            <mesh filename="file:///$(find rocket)/meshes/M_rodatrativa.dae" scale="1 1 1"/>
        </geometry>
      </visual>
      
      <collision name="right_wheel_collision">
        <origin xyz="0 0 0" rpy="0 1.57 0"/>
        <geometry>
          <cylinder length="${wheel_width}" radius="${wheel_radius}"/>
        </geometry>
      </collision>
      
      <inertial>
        <mass value="1" />
        <origin rpy="0 1.57 0" xyz="0 0 0" />
        <inertia ixx="0.001" ixy="0.0" ixz="0.0"
                iyy="0.001" iyz="0.0"
                izz="0.001" />
      </inertial>
      
    </link>

    <joint name="joint_right_wheel" type="continuous">
            <parent link="chassis" />
            <child link="right_wheel" />
            <origin rpy="0 0 1.57" xyz="0 0.296395 0" />
            <axis rpy="0 0 0" xyz="1 0 0"/>
    </joint>

  <!-- *********************** TRAY ******************************  -->

  <link name="tray">
      <visual name="tray_visual">
        <origin xyz="0 0 0.0118" rpy="0 0 0"/>
        <geometry>
            <mesh filename="file:///$(find rocket)/meshes/ELV_conjuntocompleto.dae" scale="1 1 1"/>
        </geometry>
      </visual>
      
      <collision name="tray_collision">
        <origin xyz="0 -0.015047 0.1" rpy="0 0 0"/>
        <geometry>
          <cylinder length="${tray_width}" radius="${tray_radius}"/>
        </geometry>
      </collision>
      
      <inertial>
        <mass value="0.5" />
        <origin rpy="0 0 0" xyz="0 -0.015047 0.1" />
        <inertia ixx="0.0" ixy="0.0" ixz="0.0"
                iyy="0.0" iyz="0.0"
                izz="0.0" />
      </inertial>
  </link>

  <joint name="joint_tray" type="fixed">
            <parent link="chassis" />
            <child link="tray" />
            <origin rpy="0 0 0" xyz="0 0.015047 0" />
    </joint>

  <gazebo>
    <plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so">
      <robotNamespace>/</robotNamespace>
    </plugin>
  </gazebo>

</robot>
