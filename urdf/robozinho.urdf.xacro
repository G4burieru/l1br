<?xml version="1.0" ?>
<robot name="robozinho" xmlns:xacro="http://ros.org/wiki/xacro">

  <!-- ****************** ROBOT CONSTANTS *******************************  -->
  <!-- Define the size of the robot's main chassis in meters -->
  <xacro:property name="base_width" value="0.557"/>
  <xacro:property name="base_length" value="0.617"/>
  <xacro:property name="base_height" value="0.182"/>
	
  <!-- Define the shape of the robot's two back wheels in meters -->
  <xacro:property name="wheel_radius" value="0.07"/>
  <xacro:property name="wheel_width" value="0.03"/>

  <!-- x-axis points forward, y-axis points to left, z-axis points upwards -->
  <!-- Define the gap between the wheel and chassis along y-axis in meters -->
  <xacro:property name="wheel_ygap" value="0.035"/>

  <!-- Position the wheels along the z-axis -->
  <xacro:property name="wheel_zoff" value="0.05"/>

  <!-- Position the wheels along the x-axis -->
  <xacro:property name="wheel_xoff" value="0.221"/>

  <!-- ********************** ROBOT BASE *********************************  -->
  <link name="base_link">
    </link>
    
    <joint name="base_joint" type="fixed">
      <parent link="base_link"/>
      <child link="chassis" />
      <origin xyz="0.0 0.0 0.0118" rpy="0 0 3.14"/>
    </joint>

    <link name="chassis">
      <visual>
        <origin xyz="0  0  0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="file:///$(find rocket)/meshes/EST_estrutura_m3.dae" />
        </geometry>
      </visual>

      <collision>
          <origin rpy="0  0  0" xyz="0  0  0" />
          <geometry>
              <box size="${base_length} ${base_width} ${base_height}"/>
          </geometry>
      </collision>

      <inertial>
          <origin xyz="0  0  0.0118" rpy="0  0  3.14"/>
          <mass value="2.4"/>
          <inertia ixx="0.019995" ixy="0.0" ixz="0.0"
                iyy="0.019995" iyz="0.0"
                izz="0.03675" />
      </inertial>
    
    </link>

  <!-- *********************** DRIVE WHEELS ******************************  -->
  
    <link name="left_wheel">
      <visual name="left_wheel_visual">
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
            <mesh filename="file:///$(find rocket)/meshes/M_rodatrativa.dae" scale="1 1 1"/>
        </geometry>
      </visual>
      
      <collision name="left_wheel_collision">
        <origin xyz="0 0 0" rpy="0 0 1.57"/>
        <geometry>
          <cylinder length="${wheel_width}" radius="${wheel_radius}"/>
        </geometry>
      </collision>
      
      <inertial>
        <mass value="1" />
        <origin rpy="0 0 0" xyz="0 0 0" />
        <inertia ixx="0.001" ixy="0.0" ixz="0.0"
                iyy="0.001" iyz="0.0"
                izz="0.001" />
      </inertial>
      
    </link>

    <joint name="joint_left_wheel" type="revolute">
            <parent link="chassis" />
            <child link="left_wheel" />
            <origin rpy="0 0 1.57" xyz="-0.098795 -0.296755 -0.09915" />
            <axis rpy="0 0 0" xyz="0 1 0"/>
            <limit effort="10000" velocity="1000"/>
    </joint>

    <link name="right_wheel">
      <visual name="right_wheel_visual">
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
            <mesh filename="file:///$(find rocket)/meshes/M_rodatrativa.dae" scale="1 1 1"/>
        </geometry>
      </visual>
      
      <collision name="right_wheel_collision">
        <origin xyz="0 0 0" rpy="0 0 1.57"/>
        <geometry>
          <cylinder length="${wheel_width}" radius="${wheel_radius}"/>
        </geometry>
      </collision>
      
      <inertial>
        <mass value="1" />
        <origin rpy="0 0 0" xyz="0 0 0" />
        <inertia ixx="0.001" ixy="0.0" ixz="0.0"
                iyy="0.001" iyz="0.0"
                izz="0.001" />
      </inertial>
      
    </link>

    <joint name="joint_right_wheel" type="revolute">
            <parent link="chassis" />
            <child link="right_wheel" />
            <origin rpy="0 0 1.57" xyz="-0.098795 0.296395 -0.09915" />
            <axis rpy="0 0 0" xyz="0 1 0"/>
            <limit effort="10000" velocity="1000"/>
    </joint>

  <!-- *********************** TRAY ******************************  -->

  <link name="tray">
      <visual name="tray_visual">
        <origin xyz="0 0 0.0118" rpy="0 0 0"/>
        <geometry>
            <mesh filename="file:///$(find rocket)/meshes/ELV_conjuntocompleto.dae" scale="1 1 1"/>
        </geometry>
      </visual>
      
      <collision name="tray_collision">
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="file:///$(find rocket)/meshes/ELV_conjuntocompleto.dae" scale="1 1 1"/>
        </geometry>
      </collision>
      
      <inertial>
        <mass value="0.5" />
        <origin rpy="0 0 0" xyz="0 0 0" />
        <inertia ixx="0.0" ixy="0.0" ixz="0.0"
                iyy="0.0" iyz="0.0"
                izz="0.0" />
      </inertial>
  </link>

  <joint name="joint_tray" type="fixed">
            <parent link="chassis" />
            <child link="tray" />
            <origin rpy="0 0 0" xyz="0 0 0" />
    </joint>

</robot>
